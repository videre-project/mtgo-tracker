{
  "name": "mtgo-tracker",
  "version": "0.1.0",
  "homepage": "./",
  "description": "A lightweight open-source MTGO tracker.",
  "repository": "https://github.com/videre-project/mtgo-tracker.git",
  "author": "Videre Project <support@videreproject.com>",
  "license": "MIT",
  "main": "src/electron.js",
  "private": true,
  "devDependencies": {
    "@testing-library/jest-dom": "^5.11.5",
    "@testing-library/react": "^11.1.2",
    "@testing-library/user-event": "^12.2.2",
    "concurrently": "^5.3.0",
    "electron": "11.1.0",
    "electron-builder": "^22.9.1",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.5",
    "eslint": "^7.14.0",
    "prettier": "^2.2.0",
    "react-scripts-postcss": "4.0.0-mod1",
    "react-snap": "^1.23.0",
    "rimraf": "^3.0.2",
    "source-map-explorer": "^2.5.0",
    "stylelint": "^13.7.2",
    "stylelint-config-recommended": "^3.0.0",
    "wait-on": "^5.2.0"
  },
  "dependencies": {
    "classnames": "^2.2.6",
    "glob": "^7.1.6",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-helmet": "^6.1.0",
    "react-transition-group": "^4.4.1"
  },
  "scripts": {
    "start": "concurrently \"set BROWSER=none && react-scripts start\" \"wait-on http://localhost:3000 && set ELECTRON_DISABLE_SECURITY_WARNINGS=true && set ELECTRON_START_URL=http://localhost:3000 && electron .\"",
    "build": "react-scripts build",
    "postbuild": "react-snap",
    "package": "rimraf dist && electron-builder",
    "test": "react-scripts test --env=jsdom --watchAll --verbose --silent",
    "eject": "react-scripts eject",
    "format": "prettier src --write",
    "lint": "eslint src --fix",
    "analyze": "source-map-explorer 'build/static/js/*.js'"
  },
  "reactSnap": {
    "skipThirdPartyRequests": true,
    "headless": true,
    "crawl": true,
    "publicPath": "/"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not op_mini all"
  ],
  "build": {
    "appId": "com.videreproject.mtgo-tracker",
    "productName": "MTGO Tracker",
    "copyright": "Videre Project",
    "directories": {
      "buildResources": "public"
    }
  },
  "proxy": "https://api.projectvidere.com"
}
